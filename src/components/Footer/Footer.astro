<style>
  .footer {
    background-color: var(--bg-primary);
    border-top: 1px solid var(--border);
    padding: 2.5rem 1rem;
    font-family: 'Inter', sans-serif;
    transition: all 0.3s ease;
  }

  .footer-container {
    max-width: 1200px;
    margin: 0 auto;
    display: flex;
    flex-direction: column;
    gap: 2rem;
  }

  .footer-brand {
    display: flex;
    align-items: center;
    gap: 1rem;
  }

  .logo-container {
    background-color: white;
    border-radius: 50%;
    padding: 8px;
    display: flex;
    align-items: center;
    justify-content: center;
    box-shadow: 0 2px 6px rgba(0, 0, 0, 0.1);
  }

  .footer-logo {
    border-radius: 50%;
  }

  .brand-name {
    font-size: 1.5rem;
    font-weight: 700;
    margin: 0;
    color: var(--color-primary);
  }

  .brand-tagline {
    margin: 0;
    font-size: 0.9rem;
    color: var(--text-secondary);
  }

  .footer-content {
    display: grid;
    grid-template-columns: repeat(1, 1fr);
    gap: 2rem;
  }

  @media (min-width: 768px) {
    .footer-content {
      grid-template-columns: repeat(3, 1fr);
    }
  }

  .footer-section {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .section-title {
    font-size: 1.1rem;
    font-weight: 600;
    margin: 0;
    color: var(--text-primary);
  }

  .disclaimer {
    margin: 0;
    line-height: 1.6;
    color: var(--text-secondary);
    font-size: 0.9rem;
    max-width: 400px;
  }

  .footer-links {
    list-style: none;
    padding: 0;
    margin: 0;
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
  }

  .footer-link {
    text-decoration: none;
    color: var(--text-secondary);
    transition: color 0.2s ease;
    font-size: 0.9rem;
  }

  .footer-link:hover {
    color: var(--color-primary);
  }

  .footer-bottom {
    display: flex;
    flex-direction: column;
    gap: 1rem;
    align-items: center;
    border-top: 1px solid var(--border);
    padding-top: 1.5rem;
    margin-top: 1rem;
  }

  @media (min-width: 640px) {
    .footer-bottom {
      flex-direction: row;
      justify-content: space-between;
    }
  }

  .copyright {
    margin: 0;
    font-size: 0.8rem;
    text-align: center;
    color: var(--text-secondary);
  }

  .social-icons {
    display: flex;
    gap: 1rem;
  }

  .social-icon {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 36px;
    height: 36px;
    border-radius: 50%;
    background-color: var(--bg-primary);
    color: var(--text-secondary);
    transition: all 0.2s ease;
  }

  .social-icon:hover {
    background-color: var(--color-primary);
    color: white;
    transform: translateY(-2px);
  }

  body.true .footer {
    background-color: var(--dark-bg-primary);
    border-top-color: var(--dark-border);
  }

  body.true .brand-name {
    color: var(--dark-primary);
  }

  body.true .brand-tagline,
  body.true .section-title,
  body.true .disclaimer,
  body.true .copyright {
    color: var(--dark-text-secondary);
  }

  body.true .footer-link {
    color: var(--dark-text-secondary);
  }

  body.true .footer-link:hover {
    color: var(--dark-primary);
  }

  body.true .footer-bottom {
    border-top-color: var(--dark-border);
  }

  body.true .social-icon {
    background-color: var(--dark-bg-primary);
    color: var(--dark-text-secondary);
  }

  body.true .social-icon:hover {
    background-color: var(--dark-primary);
    color: var(--dark-bg-primary);
  }
</style>
